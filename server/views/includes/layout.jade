doctype
html
    head
        title My project name
        link(rel="shortcut icon" type="image/png" href="/favicon.ico")
        include styles
    body
        if (error)
            div=error
        header
            nav.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top
                a.navbar-brand(href="/") File Upload
                button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbar", aria-controls="navbar", aria-expanded="false", aria-label="Toggle navigation")
                    span.navbar-toggler-icon
                #navbar.collapse.navbar-collapse
                    ul.navbar-nav.mr-auto.mt-2.mt-lg-0
                        li.nav-item.active
                            a.nav-link(href="/") Home
                                span.sr-only (current)
                        li.nav-item
                            a.nav-link(href="/courses") Courses

                    if (currentUser)
                        a.btn.btn-outline-primary.my-2.my-sm-0(type="submit" href="/logout") Logout
                    else
                        form.form-inline.my-2.my-lg-0(method="post" action="login")
                            input.form-control.mr-sm-2(type="text" placeholder="Username" name="username")
                            input.form-control.mr-sm-2(type="password" placeholder="Password", name="password")
                            button.btn.btn-outline-success.my-2.my-sm-0(type="submit") Login
                            a.nav-link(href="/register") Register
        block main-content

        include scripts

        footer#footer
            p.text-center
                | &copy; Georgi Yonchev 2018
